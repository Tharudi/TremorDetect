<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".WifiConnection">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="401dp"
        android:layout_height="117dp"
        app:srcCompat="@drawable/images"
        android:background="@drawable/images" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageView5"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:text="Patient No"
        android:textSize="17sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/white"  />

    <EditText
        android:id="@+id/editText"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:inputType="number"
        android:text="100"
        android:textSize="17sp"
        android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/weekno"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:text="Date"
        android:textSize="17sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/textView"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tvDatee"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:hint="Select Date"
        android:textSize="17sp"
        android:layout_below="@+id/editText"
        android:textColor="@android:color/white"/>



    <!--<Switch-->
    <!--android:id="@+id/switch1"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:switchMinWidth="56dp"-->
    <!--android:layout_marginLeft="50dp"-->
    <!--android:layout_marginTop="10dp"-->
    <!--android:text="Le:"-->
    <!--android:checked="true"-->
    <!--android:textOff="OFF"-->
    <!--android:textOn="ON"-->
    <!--android:layout_below="@+id/weekno"/>-->

    <RadioGroup
        android:id="@+id/radihand"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"

        android:layout_marginTop="30dp">


        <RadioButton
            android:id="@+id/radoFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            android:text="Right Hand"
            android:textSize="17sp"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/radoMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekno"
            android:layout_marginLeft="10dp"
            android:checked="true"
            android:text="Left Hand"
            android:textSize="17sp"
            android:textColor="@android:color/white" />

    </RadioGroup>

    <!--<Switch-->
    <!--android:id="@+id/switch2"-->
    <!--android:layout_width="171dp"-->
    <!--android:layout_height="50dp"-->
    <!--android:layout_below="@+id/editText2"-->
    <!--android:layout_marginTop="7dp"-->
    <!--android:text="Right Hand"-->
    <!--android:layout_marginRight="@+id/switch1"-->
    <!--android:layout_alignParentRight="true"/>-->
    <Button
        android:id="@+id/statbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="220dp"
        android:layout_marginRight="83dp"
        android:background="@layout/round_shape"
        android:text="Start"
        android:textColor="@android:color/white"/>


    <TextView
        android:id="@+id/aceleration"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_below="@id/statbtn"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="50dp"
        android:text="X: Y: Z:"
        android:textSize="17sp"
        android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/rte"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:text="Frequency rate"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/aceleration"
        android:textSize="17sp"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/fate"
        android:layout_width="167dp"
        android:layout_height="67dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentRight="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="314dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="60dp"
        android:inputType="number"
        android:textSize="17sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tate"
        android:layout_width="171dp"
        android:layout_height="52dp"
        android:layout_below="@id/rte"
        android:text="Tremor rate"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="50dp"
        android:textSize="17sp"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/tremoratee"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentRight="true"
        android:layout_marginTop="367dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="17sp"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/savbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Record"
        android:layout_marginTop="550dp"
        android:background="#F0E68C"
        android:textColor="@android:color/white"/>


</RelativeLayout>